<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/commonHeadTags') %>
    <link rel="stylesheet" href="/styles/home.css" />
    <title>Anonym</title>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <main>
      <h1 class="title">
        <%= locals.currentUser ? `Welcome, ${currentUser.firstName}` : 'Anonym'
        %>
      </h1>
      <ul>
        <% if (locals.messages.length === 0) { %>
        <li>No messages yet. Be the first to create one!</li>
        <% } %>

        <% for (const message of locals.messages) { %>
        <li>
          <h3><%= message.title %></h3>
          <span>
            by
            <%= message.author %>
          </span>
          <p><%= message.content %></p>
          <small><%= message.date %></small>
        </li>

        <% if (locals.currentUser?.admin) { %>
        <form action="delete-message/<%= message.id %>" method="post">
          <button type="submit">Delete</button>
        </form>
        <% } %>

        <% } %>
      </ul>
    </main>
  </body>
</html>
